# vidTranscriber Configuration

# Server settings
PORT=8509
REQUEST_LIMIT_PER_MINUTE=10

# Model settings
MODEL_NAME=turbo  # Options: tiny, base, small, medium, large-v1, large-v2, large-v3, turbo

# Hardware settings
DEVICE=cuda  # Options: cuda, cpu
FORCE_CPU=false  # Force CPU mode even if CUDA is available
COMPUTE_TYPE=float16  # Options: float16, float32, int8, int8_float16

# Processing settings
BATCH_SIZE=8  # Higher values = faster processing but more memory usage
MAX_CONCURRENT_JOBS=2
MAX_VIDEO_SIZE_MB=500
MAX_VIDEO_DURATION_MINUTES=60

# Storage settings
TEMP_DIR=/tmp/vidTranscriber
OUTPUT_DIR=/tmp/vidTranscriberOutput 